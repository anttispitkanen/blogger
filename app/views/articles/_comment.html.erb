<div>
  <h4>Comment by <%= comment.author_name %></h4>
  <p>Posted <%= distance_of_time_in_words(comment.article.created_at,
                                          comment.created_at) %> later</p>
  <p class="comment"><%= comment.body %></p>

<% if logged_in? %>
  <p>
    <%= link_to 'Delete comment', [comment.article, comment],
                            method: :delete,
                            data: {confirm: 'Sure?'} %>
  </p>
<% end %>

</div>
